<div class="container mt-5">
    <h3 class="my-3">Compose Your Report Here... üòç ‚úçÔ∏è</h3>
    <form action="/edit/<%= blog._id %>" method="POST" enctype="multipart/form-data">
        <input type="text" value="<%= blog.title %>" name="title" placeholder="Enter Title" class="form-control" required>
        <% let my_tags=[] 
        blog.tags.forEach((item)=>{ 
           my_tags.push("#"+item); 
         }) %>
        <input type="text" value="<%= my_tags.join(',')%>" name="tags1" placeholder="Enter tags"  class="mt-3 form-control" required>
        <textarea name="content" cols="30" rows="10" class="mt-3 form-control" placeholder="Enter Content Here..."
            required><%= blog.content %></textarea>
            <label class="filebutton">
                Browse File!
               <span><input type="file" class="file" name="report" required></span>
            </label>
        <input type="submit" value="Save Changes" class="mt-5 btn btn-md btn-danger">
    </form>
</div>

